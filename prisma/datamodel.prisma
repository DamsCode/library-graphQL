type Book{
    id: ID! @id
    isbn: String!
    title: String!
    authors: [String!]! @scalarList(strategy: RELATION)
    editor:String!
    format: String!
    language:String!
    cover: String!
    comments:[Comment!]!
    rent: [Rent!]!
}


type User {
    id: ID! @id
    name: String!
    email: String! @unique
    password: String!
    comments:[Comment!]!
    rent: [Rent!]!
}

type Comment{
    id: ID! @id
    title: String
    comment: String!
    bookeval: Int
    book: Book!
    user: User!
    usefull: Int
    notusefull:Int
}

type Rent{
    id: ID! @id
    book: Book!
    user: User!
    rentAt: DateTime!
    backAt: DateTime
    isBack: Boolean @default(value: false)
}